{
	"name": "blog-tecnofinanzas",
	"type": "module",
	"version": "1.1.2",
	"description": "a blog of technology and finances",
	"author": "Yeferson",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/yeferson59/blog-template"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"bugs": {
		"url": "https://github.com/yeferson59/blog-template/issues"
	},
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"start": "astro dev",
		"build": "astro build",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --site dist",
