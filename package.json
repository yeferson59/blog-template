		"prettier": "^3.2.5",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.13.0",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "2.2.2",
		"tailwindcss": "3.4.3",
		"tinacms": "^1.6.1",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	}
