	"dependencies": {
		"@astrojs/rss": "4.0.5",
		"astro": "4.5.17",
		"astro-font": "^0.0.80"
	},
	"devDependencies": {
		"@astrojs/mdx": "2.3.0",
		"@astrojs/sitemap": "3.1.2",
		"@astrojs/tailwind": "5.1.0",
		"@pagefind/default-ui": "^1.1.0",
		"@tailwindcss/typography": "0.5.12",
		"@tinacms/cli": "^1.5.43",
		"@typescript-eslint/parser": "^7.6.0",
		"clsx": "2.1.0",
		"eslint": "^9.0.0",
		"eslint-plugin-astro": "^0.34.0",
